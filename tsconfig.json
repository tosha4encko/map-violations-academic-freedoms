{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts", "src/index.tsx", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
